{% comment %}
  Custom Shopify homepage with HTML, CSS, and Liquid.
  Assign this template to a page, then set that page as the store's homepage.
{% endcomment %}

{% layout none %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>
      {{ shop.name }}
      - Home
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      :root {
        --primary-color: #111;
        --accent-color: #f39c12;
        --bg-light: #f9f9f9;
        --text-dark: #333;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Helvetica Neue', sans-serif;
        color: var(--text-dark);
        background: #fff;
        line-height: 1.6;
      }

      header {
        background-color: var(--primary-color);
        color: #fff;
        padding: 2rem 1rem;
        text-align: center;
      }

      .hero {
        background: url('{{ "hero.jpg" | asset_url }}') center/cover no-repeat;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.7);
      }

      .hero h1 {
        font-size: 3rem;
        background-color: rgba(0, 0, 0, 0.4);
        padding: 1rem 2rem;
        border-radius: 10px;
      }

      .section {
        padding: 60px 20px;
        max-width: 1200px;
        margin: auto;
      }

      .section h2 {
        text-align: center;
        font-size: 2.2rem;
        margin-bottom: 30px;
      }

      .products {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
      }

      .product {
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
        transition: transform 0.2s ease;
        background-color: #fff;
      }

      .product:hover {
        transform: translateY(-5px);
      }

      .product img {
        max-width: 100%;
        height: auto;
      }

      .product h3 {
        font-size: 1.2rem;
        margin: 10px 0;
      }

      .product p {
        font-size: 1rem;
        color: var(--accent-color);
      }

      .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        text-align: center;
      }

      .feature-box {
        padding: 20px;
        background: var(--bg-light);
        border-radius: 10px;
      }

      .feature-box h3 {
        margin-bottom: 10px;
        color: var(--accent-color);
      }

      footer {
        background-color: #222;
        color: #aaa;
        text-align: center;
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{{ shop.name }}</h1>
      <p>Welcome to our store ‚Äì Quality you can trust</p>
    </header>

    <section class="hero">
      <h1>New Season. New Style.</h1>
    </section>

    <section class="section">
      <h2>Featured Products</h2>
      <div class="products">
        {% assign products = collections.frontpage.products %}
        {% if products.size > 0 %}
          {% for product in products limit: 6 %}
            <div class="product">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        {% else %}
          <p style="text-align:center;">No products in the frontpage collection yet.</p>
        {% endif %}
      </div>
    </section>

    <section class="section">
      <h2>Why Choose Us?</h2>
      <div class="features">
        <div class="feature-box">
          <h3>üöö Fast Delivery</h3>
          <p>Orders ship within 24 hours, so you get what you need, fast.</p>
        </div>
        <div class="feature-box">
          <h3>üí≥ Secure Checkout</h3>
          <p>We use SSL security to ensure all payments are protected.</p>
        </div>
        <div class="feature-box">
          <h3>ü§ù Quality Guarantee</h3>
          <p>We stand behind every product with a 100% satisfaction guarantee.</p>
        </div>
      </div>
    </section>

    <footer>
      &copy; {{ 'now' | date: '%Y' }}
      {{ shop.name }} ‚Äî All rights reserved.
    </footer>
  </body>
</html>
